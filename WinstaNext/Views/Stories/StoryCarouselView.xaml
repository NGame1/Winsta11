<views:BasePage
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="WinstaNext.Views.Stories.StoryCarouselView"
    xmlns:models="using:WinstaNext.Abstractions.Stories"
    xmlns:VM="using:WinstaNext.ViewModels.Stories"
    xmlns:views="using:WinstaNext.Views"
    xmlns:Winsta="using:WinstaNext" 
    mc:Ignorable="d">

    <views:BasePage.DataContext>
        <VM:StoryCarouselViewModel x:Name="ViewModel"/>
    </views:BasePage.DataContext>

    <Grid>
        <controls:Carousel ItemsSource="{x:Bind ViewModel.Stories, Mode=OneWay}"
                           Orientation="Horizontal"
                           InvertPositive="True"
                           ItemDepth="400"
                           ItemMargin="1"
                           ItemRotationX="0"
                           ItemRotationY="0"
                           ItemRotationZ ="0"
                           SelectedIndex="12">
            
            <controls:Carousel.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </controls:Carousel.EasingFunction>
            
            <controls:Carousel.ItemTemplate>
                <DataTemplate x:DataType="models:WinstaStoryItem">
                    <Image Width="200"
                           Height="200"
                           VerticalAlignment="Bottom"
                           Source="{Binding Thumbnail}"
                           Stretch="Uniform" />
                </DataTemplate>
            </controls:Carousel.ItemTemplate>
            
        </controls:Carousel>
    </Grid>
</views:BasePage>
