<views:BasePage
    xmlns:views="using:WinstaNext.Views"
    x:Class="WinstaNext.Views.Settings.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinstaNext"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:mucx="using:Microsoft.UI.Xaml.Controls" xmlns:controls="using:WinstaNext.UI.Controls" xmlns:VM="using:WinstaNext.ViewModels.Settings" xmlns:converters="using:WinstaNext.Converters"
    mc:Ignorable="d" Margin="{x:Bind PageMargin}">

    <Page.Resources>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
    </Page.Resources>
    
    <views:BasePage.DataContext>
        <VM:SettingsViewModel x:Name="ViewModel"/>
    </views:BasePage.DataContext>

    <ScrollViewer HorizontalScrollMode="Disabled">
        <StackPanel Margin="0,12,0,16" Spacing="4">
            <StackPanel.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition IsStaggeringEnabled="True" FromVerticalOffset="50"/>
                </TransitionCollection>
            </StackPanel.ChildrenTransitions>

            <controls:ExpandableSettingControl 
                Title="{x:Bind local:LanguageManager.Instance.Settings.Autoplay}"
                Description="{x:Bind local:LanguageManager.Instance.Settings.AutoplayDescription}">
                <controls:ExpandableSettingControl.Icon>
                    <FontIcon Glyph="&#xE102;" />
                </controls:ExpandableSettingControl.Icon>
                <ToggleSwitch Style="{StaticResource RightAlignedToggleSwitchStyle}" 
                              IsOn="{x:Bind ViewModel.AutoPlayEnabled, Mode=TwoWay}"/>
            </controls:ExpandableSettingControl>

            <controls:ExpandableSettingControl 
            Title="{x:Bind local:LanguageManager.Instance.General.Language}"
            Description="{x:Bind local:LanguageManager.Instance.General.LanguageDescription}">
                <controls:ExpandableSettingControl.Icon>
                    <FontIcon Glyph="&#xF2B7;" />
                </controls:ExpandableSettingControl.Icon>
                <ComboBox 
                DisplayMemberPath="DisplayName"
                ItemsSource="{x:Bind ViewModel.AvailableLanguages}"
                SelectedValue="{x:Bind ViewModel.Language, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                </ComboBox>
            </controls:ExpandableSettingControl>

            <controls:ExpandableSettingControl
            Title="{x:Bind local:LanguageManager.Instance.General.AppTheme}"
            Description="{x:Bind local:LanguageManager.Instance.General.AppThemeDescription}">
                <controls:ExpandableSettingControl.Icon>
                    <FontIcon Glyph="&#xE790;" />
                </controls:ExpandableSettingControl.Icon>
                <controls:ExpandableSettingControl.ExpandableContent>
                    <StackPanel Padding="12" Spacing="4" Margin="42,0,6,0">
                        <RadioButton
                        Content="{x:Bind local:LanguageManager.Instance.General.Light}"
                        IsChecked="{x:Bind ViewModel.Theme, Mode=TwoWay, ConverterParameter='Light', Converter={StaticResource EnumToBooleanConverter}}"/>
                        <RadioButton
                        Content="{x:Bind local:LanguageManager.Instance.General.Dark}"
                        IsChecked="{x:Bind ViewModel.Theme, Mode=TwoWay, ConverterParameter='Dark', Converter={StaticResource EnumToBooleanConverter}}"/>
                        <RadioButton
                        Content="{x:Bind local:LanguageManager.Instance.General.System}"
                        IsChecked="{x:Bind ViewModel.Theme, Mode=TwoWay, ConverterParameter='Default', Converter={StaticResource EnumToBooleanConverter}}"/>
                    </StackPanel>
                </controls:ExpandableSettingControl.ExpandableContent>
            </controls:ExpandableSettingControl>

        </StackPanel>
    </ScrollViewer>
</views:BasePage>
