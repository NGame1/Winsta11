<views:BasePage
    xmlns:views="using:WinstaNext.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="WinstaNext.Views.Media.MediaLikersView"
    xmlns:VM="using:WinstaNext.ViewModels.Media"
    xmlns:local="using:WinstaNext.Views.Media" xmlns:media="using:WinstaNext.Abstractions.Media" xmlns:generic="using:WinstaNext.UI.Generic"
    mc:Ignorable="d">

    <views:BasePage.DataContext>
        <VM:MediaLikersViewModel x:Name="ViewModel"/>
    </views:BasePage.DataContext>
    
    <ListView ItemsSource="{x:Bind ViewModel.MediaLikers, Mode=OneWay}"
              ItemContainerStyle="{StaticResource ListViewStretcher}">

        <ListView.ItemTemplate>
            <DataTemplate x:DataType="media:WinstaMediaLikerUser">
                <generic:InstaUserPresenterUC User="{x:Bind User, Mode=OneWay}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
        
    </ListView>
</views:BasePage>
