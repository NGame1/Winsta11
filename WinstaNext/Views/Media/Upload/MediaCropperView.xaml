<Page
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    x:Class="WinstaNext.Views.Media.Upload.MediaCropperView"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinstaNext.Views.Media.Upload"
    xmlns:VM="using:ViewModels.Media.Upload"
    mc:Ignorable="d">

    <Page.DataContext>
        <VM:FeedMediaUploadVM x:Name="ViewModel"/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <MediaElement AreTransportControlsEnabled="False"
                      x:Name="mediaElement"
                      IsLooping="True"
                      Grid.RowSpan="2"
                      Grid.Row="0"/>

        <local:VideoMediaRangeSlider MediaElement="{x:Bind mediaElement}"
                                     Margin="20,0,20,20"
                                     x:Name="slider"
                                     Opacity="0.8"
                                     Grid.Row="1"/>
    </Grid>
</Page>
